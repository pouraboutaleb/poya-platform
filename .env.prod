# MRDPOL Core Production Environment Configuration
# Copy this file to .env and update the values for your production environment

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
POSTGRES_DB=mrdpol_core_db
POSTGRES_USER=mrdpol_user
POSTGRES_PASSWORD=mrdpol_secure_password_2025_change_me

# =============================================================================
# BACKEND API CONFIGURATION
# =============================================================================

# Security Settings (CRITICAL: Change these in production!)
SECRET_KEY=mrdpol-core-production-secret-key-change-this-in-production-2025
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Application Settings
DEBUG=false
ENVIRONMENT=production

# CORS Configuration (Update with your domain)
CORS_ORIGINS=http://localhost,https://localhost,https://yourdomain.com,https://www.yourdomain.com

# File Storage Configuration
STORAGE_PATH=./storage
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf,application/msword,application/vnd.openxmlformats-officedocument.wordprocessingml.document,application/vnd.ms-excel,application/vnd.openxmlformats-officedocument.spreadsheetml.sheet,text/plain,text/csv

# =============================================================================
# EMAIL CONFIGURATION (Optional)
# =============================================================================
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password
MAIL_FROM=noreply@yourdomain.com
MAIL_USE_TLS=true

# =============================================================================
# ADMIN INTERFACE CONFIGURATION (Optional)
# =============================================================================
PGADMIN_EMAIL=admin@yourdomain.com
PGADMIN_PASSWORD=secure_admin_password_2025

# =============================================================================
# SSL/TLS CONFIGURATION (For HTTPS)
# =============================================================================
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem

# =============================================================================
# MONITORING & LOGGING
# =============================================================================
LOG_LEVEL=info
SENTRY_DSN=  # Optional: Add Sentry DSN for error tracking

# =============================================================================
# BACKUP CONFIGURATION
# =============================================================================
BACKUP_SCHEDULE=0 2 * * *  # Daily at 2 AM
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=  # Optional: S3 bucket for backups
BACKUP_S3_REGION=us-east-1

# =============================================================================
# PERFORMANCE SETTINGS
# =============================================================================
GUNICORN_WORKERS=4
GUNICORN_MAX_REQUESTS=1000
GUNICORN_MAX_REQUESTS_JITTER=100
GUNICORN_TIMEOUT=120

# =============================================================================
# FEATURE FLAGS
# =============================================================================
ENABLE_API_DOCUMENTATION=false  # Set to false in production for security
ENABLE_METRICS=true
ENABLE_HEALTH_CHECKS=true

# =============================================================================
# SECURITY HEADERS
# =============================================================================
SECURITY_HEADERS_ENABLED=true
HSTS_MAX_AGE=31536000
CSP_POLICY=default-src 'self'; script-src 'self' 'unsafe-inline'; style-src 'self' 'unsafe-inline'

# =============================================================================
# RATE LIMITING
# =============================================================================
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_BURST=10

# =============================================================================
# SESSION CONFIGURATION
# =============================================================================
SESSION_TIMEOUT=3600  # 1 hour
MAX_CONCURRENT_SESSIONS=5

# =============================================================================
# NOTIFICATION SETTINGS
# =============================================================================
ENABLE_EMAIL_NOTIFICATIONS=true
ENABLE_SMS_NOTIFICATIONS=false
NOTIFICATION_QUEUE_SIZE=1000

# =============================================================================
# INTEGRATION SETTINGS
# =============================================================================
WEBHOOK_SECRET=your-webhook-secret-key
API_VERSION=v1
API_RATE_LIMIT=100

# =============================================================================
# DEVELOPMENT/STAGING OVERRIDES
# =============================================================================
# Uncomment for staging environment
# ENVIRONMENT=staging
# DEBUG=true
# CORS_ORIGINS=*
# LOG_LEVEL=debug
